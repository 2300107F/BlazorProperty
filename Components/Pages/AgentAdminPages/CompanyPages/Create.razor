    .back-link {
        margin-top: 1.5rem;
        text-align: center;
    }

        .back-link a {
            color: var(--primary-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .back-link a:hover {
                color: var(--accent-color);
            }

    @@media (max-width: 768px) {
        .create-company-card {
            padding: 2rem;
        }

        .create-company-title {
            font-size: 1.8rem;
        }

        .create-company-subtitle {
            font-size: 1rem;
        }
    }
</style>