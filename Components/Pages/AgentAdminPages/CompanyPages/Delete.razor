@page "/companies/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorProperty.Domain
@inject IDbContextFactory<BlazorProperty.Data.BlazorPropertyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Company - SG Realty Listings</PageTitle>

<div class="delete-company-container">
    <div class="delete-company-card">
        <h1 class="delete-company-title">Delete Company</h1>
        <p class="delete-company-subtitle">Are you sure you want to delete this company?</p>

        @if (company is null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <dl class="company-details">
                <dt>Company Name</dt>
                <dd>@company.CompanyName</dd>
                <dt>Company Description</dt>
                <dd>@company.CompanyDescription</dd>
            </dl>

            <EditForm method="post" Model="company" OnValidSubmit="DeleteCompany" FormName="delete" Enhance>
                <button type="submit" class="delete-button">
                    Delete
                    <i class="fas fa-trash"></i>
                </button>
                <a href="/companies" class="cancel-button">Cancel</a>
            </EditForm>
        }
    </div>
</div>

@code {
    private Company? company;

    [SupplyParameterFromQuery]
    private int CompanyId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        company = await context.Company.FirstOrDefaultAsync(m => m.CompanyId == CompanyId);

        if (company is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCompany()
    {
        using var context = DbFactory.CreateDbContext();
        context.Company.Remove(company!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/companies");
    }
}

<style>
    /* Global Styles */
    :root {
        --primary-color: #1a365d;
        --accent-color: #d4af37;
        --text-light: #f8f9fa;
        --text-dark: #2d3748;
        --error-color: #dc3545;
    }

    .delete-company-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .delete-company-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    .delete-company-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .delete-company-subtitle {
        font-size: 1.1rem;
        color: #6c757d;
        text-align: center;
        margin-bottom: 2rem;
    }

    .company-details {
        margin-bottom: 2rem;
    }

        .company-details dt {
            font-weight: 500;
            color: var(--primary-color);
        }

        .company-details dd {
            margin-left: 0;
            margin-bottom: 1rem;
        }

    .delete-button {
        background: var(--error-color);
        color: var(--text-light);
        padding: 0.8rem 2rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
    }

        .delete-button:hover {
            background: #c82333;
        }

        .delete-button i {
            transition: transform 0.3s ease;
        }

        .delete-button:hover i {
            transform: translateX(3px);
        }

    .cancel-button {
        background: var(--primary-color);
        color: var(--text-light);
        padding: 0.8rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        transition: background 0.3s ease;
    }

        .cancel-button:hover {
            background: #12243d;
        }

    @@media (max-width: 768px) {
        .delete-company-card {
            padding: 2rem;
        }

        .delete-company-title {
            font-size: 1.8rem;
        }

        .delete-company-subtitle {
            font-size: 1rem;
        }
    }
</style>