@page "/companies/details"
@using Microsoft.EntityFrameworkCore
@using BlazorProperty.Domain
@inject IDbContextFactory<BlazorProperty.Data.BlazorPropertyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Company Details - SG Realty Listings</PageTitle>

<div class="details-company-container">
    <div class="details-company-card">
        <h1 class="details-company-title">Company Details</h1>

        @if (company is null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <dl class="company-details">
                <dt>Company Name</dt>
                <dd>@company.CompanyName</dd>
                <dt>Company Description</dt>
                <dd>@company.CompanyDescription</dd>
            </dl>

            <div class="actions">
                <a href="@($"/companies/edit?companyid={company.CompanyId}")" class="edit-button">
                    Edit
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/companies" class="back-button">Back to List</a>
            </div>
        }
    </div>
</div>

@code {
    private Company? company;

    [SupplyParameterFromQuery]
    private int CompanyId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        company = await context.Company.FirstOrDefaultAsync(m => m.CompanyId == CompanyId);

        if (company is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}

<style>
    /* Global Styles */
    :root {
        --primary-color: #1a365d;
        --accent-color: #d4af37;
        --text-light: #f8f9fa;
        --text-dark: #2d3748;
    }

    .details-company-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .details-company-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    .details-company-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
        text-align: center;
    }

    .company-details {
        margin-bottom: 2rem;
    }

    .company-details dt {
        font-weight: 500;
        color: var(--primary-color);
    }

    .company-details dd {
        margin-left: 0;
        margin-bottom: 1rem;
    }

    .actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .edit-button,
    .back-button {
        padding: 0.8rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        transition: background 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .edit-button {
        background: var(--accent-color);
        color: var(--text-light);
    }

    .edit-button:hover {
        background: #b38f2a;
    }

    .back-button {
        background: var(--primary-color);
        color: var(--text-light);
    }

    .back-button:hover {
        background: #12243d;
    }

    @@media (max-width: 768px) {
        .details-company-card {
            padding: 2rem;
        }

        .details-company-title {
            font-size: 1.8rem;
        }
    }
</style>