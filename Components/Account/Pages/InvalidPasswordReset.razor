@page "/Account/InvalidPasswordReset"

<PageTitle>Invalid Password Reset - SG Realty Listings</PageTitle>

<div class="invalid-reset-container">
    <div class="invalid-reset-card">
        <div class="invalid-reset-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1 class="invalid-reset-title">Invalid Password Reset Link</h1>
        <p class="invalid-reset-message">
            The password reset link you used is invalid or has expired. Please request a new password reset link below.
        </p>
        <div class="invalid-reset-actions">
            <a href="/Account/ForgotPassword" class="reset-button">Request New Reset Link</a>
            <a href="/" class="home-button">Return to Home</a>
        </div>
    </div>
</div>

<style>
    /* Global Styles */
    :root {
        --primary-color: #1a365d;
        --accent-color: #d4af37;
        --text-light: #f8f9fa;
        --text-dark: #2d3748;
        --error-color: #dc3545;
    }

    .invalid-reset-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .invalid-reset-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 500px;
        width: 100%;
    }

    .invalid-reset-icon {
        font-size: 4rem;
        color: var(--error-color);
        margin-bottom: 1.5rem;
    }

    .invalid-reset-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .invalid-reset-message {
        font-size: 1.1rem;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .invalid-reset-actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
    }

    .reset-button,
    .home-button {
        padding: 0.8rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        transition: background 0.3s ease;
        text-align: center;
    }

    .reset-button {
        background: var(--error-color);
        color: var(--text-light);
    }

    .reset-button:hover {
        background: #c82333;
    }

    .home-button {
        background: var(--primary-color);
        color: var(--text-light);
    }

    .home-button:hover {
        background: #12243d;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .invalid-reset-card {
            padding: 2rem;
        }

        .invalid-reset-title {
            font-size: 1.8rem;
        }

        .invalid-reset-message {
            font-size: 1rem;
        }
    }
</style>