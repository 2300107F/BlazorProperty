@page "/Account/ForgotPasswordConfirmation"

<PageTitle>Forgot Password Confirmation - SG Realty Listings</PageTitle>

<div class="confirmation-container">
    <div class="confirmation-card">
        <div class="confirmation-icon">
            <i class="fas fa-envelope-open-text"></i>
        </div>
        <h1 class="confirmation-title">Check Your Email</h1>
        <p class="confirmation-message">
            We've sent you an email with instructions to reset your password. Please check your inbox, including the spam folder, if you don't see it.
        </p>
        <div class="confirmation-actions">
            <a href="/" class="home-button">Return to Home</a>
        </div>
    </div>
</div>

<style>
    /* Global Styles */
    :root {
        --primary-color: #1a365d;
        --accent-color: #d4af37;
        --text-light: #f8f9fa;
        --text-dark: #2d3748;
    }

    .confirmation-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .confirmation-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 500px;
        width: 100%;
    }

    .confirmation-icon {
        font-size: 4rem;
        color: var(--accent-color);
        margin-bottom: 1.5rem;
    }

    .confirmation-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .confirmation-message {
        font-size: 1.1rem;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .confirmation-actions {
        margin-top: 2rem;
    }

    .home-button {
        background: var(--primary-color);
        color: var(--text-light);
        padding: 0.8rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        transition: background 0.3s ease;
    }

    .home-button:hover {
        background: #12243d;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .confirmation-card {
            padding: 2rem;
        }

        .confirmation-title {
            font-size: 1.8rem;
        }

        .confirmation-message {
            font-size: 1rem;
        }
    }
</style>
