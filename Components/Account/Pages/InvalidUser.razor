@page "/Account/InvalidUser"

<PageTitle>Invalid User - SG Realty Listings</PageTitle>

<div class="invalid-user-container">
    <div class="invalid-user-card">
        <div class="invalid-user-icon">
            <i class="fas fa-user-slash"></i>
        </div>
        <h1 class="invalid-user-title">Invalid User</h1>
        <p class="invalid-user-message">
            The user account you are trying to access does not exist or is no longer valid. Please check your credentials or contact support for assistance.
        </p>
        <div class="invalid-user-actions">
            <a href="/Account/Login" class="login-button">Return to Login</a>
            <a href="/" class="home-button">Return to Home</a>
        </div>
    </div>
</div>

<style>
    /* Global Styles */
    :root {
        --primary-color: #1a365d;
        --accent-color: #d4af37;
        --text-light: #f8f9fa;
        --text-dark: #2d3748;
        --error-color: #dc3545;
    }

    .invalid-user-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .invalid-user-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 500px;
        width: 100%;
    }

    .invalid-user-icon {
        font-size: 4rem;
        color: var(--error-color);
        margin-bottom: 1.5rem;
    }

    .invalid-user-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .invalid-user-message {
        font-size: 1.1rem;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .invalid-user-actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
    }

    .login-button,
    .home-button {
        padding: 0.8rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        transition: background 0.3s ease;
        text-align: center;
    }

    .login-button {
        background: var(--error-color);
        color: var(--text-light);
    }

    .login-button:hover {
        background: #c82333;
    }

    .home-button {
        background: var(--primary-color);
        color: var(--text-light);
    }

    .home-button:hover {
        background: #12243d;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .invalid-user-card {
            padding: 2rem;
        }

        .invalid-user-title {
            font-size: 1.8rem;
        }

        .invalid-user-message {
            font-size: 1rem;
        }
    }
</style>
